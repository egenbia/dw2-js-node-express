<%- include ('partials/header.ejs') %> <%- include ('partials/navbar.ejs') %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Cadastrar Clientes</h1>
    </div>
    <div class="card-body">
      <form action="/clientes/new" method="POST">
        <label>Nome do cliente:</label>
        <input
          type="text"
          name="nome"
          placeholder="Insira o nome do cliente"
          class="form-control"
          required
        />
        <label>CPF do cliente:</label>
        <input
          type="text"
          name="cpf"
          placeholder="Insira o cpf do cliente"
          class="form-control"
          required
        />
        <label>Endereço do cliente:</label>
        <input
          type="text"
          name="endereco"
          placeholder="Insira o endeço do cliente"
          class="form-control"
          required
        />
        <input type="submit" value="cadastrar" class="btn btn-success mt-3" />
        <input type="reset" value="limpar" class="btn btn-danger mt-3" />
      </form>
      <table>
        <thead>
          <tr>
            <th>Nome:</th>
            <th>CPF:</th>
            <th>Endereço:</th>
            <th colspan="2" style="text-align: center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% clientes.forEach(cliente=> { %>
          <tr>
            <td><img src="imgs/avatar.png" width="30px" /></td>
            <td><%= cliente.nome %></td>
            <td><%= cliente.cpf %></td>
            <td><%= cliente.endereco %></td>
            <td>
              <a href="/clientes/edit/<%= cliente.id %>">
              <button class="btn btn-warning">Editar</button>
            </td>

            <td>
              <a href="/clientes/delete/<%= cliente.id %>">
                <button
                  onclick="return confirm('Deseja mesmo excluir o cliente <%- cliente.nome%>?')"
                  class="btn btn-danger"o=  >
                  Excluir
                </button>
              </a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include ('partials/footer.ejs') %>
